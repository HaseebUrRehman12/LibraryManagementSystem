@model Library_Management_System.Models.Transaction

<h2>Issue New Book</h2>
<form asp-action="Create">
    <div class="form-group">
        <label for="UserID">User</label>
        <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users, "UserID", "Name"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="BookID">Book</label>
        <select asp-for="BookId" asp-items="@(new SelectList(ViewBag.Books, "BookID", "Title"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-success mt-2">Issue</button>
</form>
