@model Library_Management_System.Models.User

<h2>Add New User</h2>
<form asp-action="Create">
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter user's name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Enter user's email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input asp-for="Role" class="form-control" placeholder="Enter user's role" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <textarea asp-for="PasswordHash" class="form-control" placeholder="Enter user's PasswordHash"></textarea>
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Save</button>
</form>
